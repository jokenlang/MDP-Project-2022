<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClassDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/onHoverButton">

        <TextView
            android:id="@+id/tvCDSClassTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Kelas: "
            android:textColor="@color/background"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCDSClass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:singleLine="false"
            android:text="Mobile Device Programming"
            android:textColor="@color/background"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvCDSBidang"
            app:layout_constraintTop_toTopOf="@+id/tvCDSClassTitle" />

        <TextView
            android:id="@+id/tvCDSBidangTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Bidang: "
            android:textColor="@color/background"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCDSClass" />

        <TextView
            android:id="@+id/tvCDSBidang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Informatika"
            android:textColor="@color/background"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/tvCDSDeskripsiTitle"
            app:layout_constraintTop_toTopOf="@+id/tvCDSBidangTitle" />

        <TextView
            android:id="@+id/tvCDSDeskripsiTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Deskripsi: "
            android:textColor="@color/background"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCDSBidangTitle" />

        <TextView
            android:id="@+id/tvCDSDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:text="Lorem ipsum, dolor sit amet consectetur adipisicing elit. Minus distinctio, magnam, fuga harum maiores delectus incidunt consequuntur itaque sunt odio beatae necessitatibus perspiciatis omnis deleniti culpa aliquam quis. Adipisci at omnis fugit sit, eveniet accusantium repudiandae modi sunt sapiente dolor inventore saepe nobis libero, obcaecati quidem temporibus quae perspiciatis vero incidunt, mollitia facilis voluptate rerum voluptas? Animi ut a reprehenderit cumque laudantium explicabo quod fugiat quos quidem perferendis eius quasi porro, ratione, repudiandae totam architecto aliquam eligendi ex temporibus veniam vero rem autem molestias quia. Voluptatum ab suscipit totam recusandae tempore natus magnam distinctio repellat quaerat, fuga rem laboriosam error beatae expedita tenetur rerum incidunt dolorum saepe voluptatibus iure reiciendis amet. Fugit eligendi cum quis maiores animi aperiam aliquam quod voluptatem distinctio recusandae. Temporibus, quis. Sint nam facere consectetur esse vel vero possimus accusamus ullam minus, illo cupiditate harum nemo doloribus obcaecati sapiente praesentium cum ratione earum laborum incidunt totam beatae quo. Veniam tempore eius velit, dolorem illo consequuntur debitis laborum totam. Quis illum assumenda veritatis adipisci. Earum accusamus nobis optio amet maxime id distinctio, omnis quos facere delectus assumenda illum pariatur dolor at, eum eveniet! Laborum illo culpa quidem magni dolorum nemo accusantium corporis distinctio, mollitia rem? Dolorum, expedita."
            android:textColor="@color/background"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/tvCDSNilaiTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCDSDeskripsiTitle" />

        <TextView
            android:id="@+id/tvCDSNilaiTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Nilai Anda: "
            android:textColor="@color/background"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvCDSNilai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/montserrat"
            android:text="-"
            android:textColor="@color/background"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tvCDSNilaiTitle"
            app:layout_constraintStart_toEndOf="@+id/tvCDSNilaiTitle"
            app:layout_constraintTop_toTopOf="@+id/tvCDSNilaiTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnRedirectCertificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:enabled="false"
        android:fontFamily="@font/montserrat"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="Lihat Sertifikat"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:cornerRadius="12dp" />

    <Button
        android:id="@+id/btnRedirectModule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/montserrat"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="Lihat Daftar Module"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="12dp" />

</LinearLayout>
